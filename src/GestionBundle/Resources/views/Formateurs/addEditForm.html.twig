<form 
    {% if formateur.uniqId %} 
    action="{{ path("addEditFormateur" , { "id" : formateur.id } ) }}"
    {% else %} 
    action="{{ path("addEditFormateur" , { "id" : 0 } ) }}"
    {% endif %}
    
     method="POST" >
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{% if formateur.uniqId %} Editer  {% else %} Ajouter {% endif %} Formateur</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">

        <div class="form-group row">
            <label for="uniq_id" class="col-form-label col-sm-3">Identifiant :</label>
            <div class="col-sm-9">
                <input type="text" name="uniq_id" class="form-control" required id="uniq_id" placeholder="Identifiant" value="{{ formateur.uniqId }}">
            </div>
        </div>

        <div class="form-group row"> 
            <label for="prenom" class="col-form-label col-sm-3">Prénom :</label>
            <div class="col-sm-9">
                <input type="text" name="prenom" class="form-control" required id="prenom" placeholder="Prénom" value="{{ formateur.prenom }}" >
            </div>
        </div>


        <div class="form-group row">
            <label for="nom" class="col-form-label col-sm-3">Nom :</label>
            <div class="col-sm-9">
                <input type="text" name="nom" class="form-control" required id="nom" placeholder="Nom" value="{{ formateur.nom }}" >
            </div>
        </div>

        <div class="form-group row">
            <label for="email" class="col-form-label col-sm-3">Email :</label>
            <div class="col-sm-9">
                <input type="email" name="email" class="form-control" required id="email" placeholder="Email" value="{{ formateur.email }}">
            </div>
        </div>

        <div class="form-group row">
            <label for="telephone" class="col-form-label col-sm-3">Téléphone :</label>
            <div class="col-sm-9">
                <input type="text" name="telephone" class="form-control" required id="telephone" placeholder="12 34 56 78 90" value="{{ formateur.telephone }}">
            </div>
        </div>


    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Annuler</button>
        <button type="submit" class="btn btn-primary btn-sm">Valider</button>
    </div>

</form>
