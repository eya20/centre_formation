{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-container">
        {% block sidebar %}
            {{ parent() }}
        {% endblock %}
        {% block main %}
            {{ parent() }}
              <!-- header area end -->
            <!-- page title area start -->
                <div class="page-title-area mt-5"> <div class="row align-items-center">
                    <div class="col-sm-6">
                        <div class="breadcrumbs-area clearfix">
                            <h3 class="page-title pull-left">Gestion des Formateurs </h3>
                        </div>
                    </div>

                </div>
            </div>
            <!-- main content area end -->

        {% endblock %}
        <!-- button add -->
        <button class="btn btn-primary btn-sm pull-right" data-toggle="modal" data-target="#modal" data-remote="/formateur/addEdit/0">
            <b>Ajouter</b>
        </button>

        <div class="clearfix"></div>
        <!-- formations table list -->
        <table class="table table-striped mt-5">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col" width="40%">Nom Complet</th>
                    <th scope="col">Identifiant Unique</th>
                    <th scope="col">Téléphone</th>
                    <th scope="col" class="text-right">Actions</th>

                </tr>
            </thead>
            <tbody>
                {% for formateur in data %}
                <tr>
                    <th scope="row">{{ formateur.id }}</th>
                    <td>{{ formateur.prenom }} {{ formateur.nom }}</td>
                    <td>{{ formateur.uniqId }}</td>
                    <td>{{ formateur.telephone }}</td>

                    <td class="text-right">
                        <button class="btn btn-dark btn-xs " data-toggle="modal" data-target="#modal" data-remote="/formateur/addEdit/{{ formateur.id }}">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </button>
                        <button class="btn btn-danger btn-xs deleteItem" data-remote="/formateur/delete/{{ formateur.id }}">
                            <i class="fa fa-times" aria-hidden="true"></i>
                        </td>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <!-- modal pour ajouter et modifier -->

    </div>
{% endblock %}
