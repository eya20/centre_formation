
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Liste des Notes </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">


<form action="{{ path("addListe" , { "id" : evaluation.id } ) }}"  method="POST">
    <div class="row">
        <h6 class="col-6" style:"padding-bottom: 20px !important;">Etudiant</h6>
        <h6 class="col-6" style:"padding-bottom: 20px !important;">Note</h6>
    </div>
    {% for etudiant in etudiants %}
            <div class="form-group row">
                <label for="note" class="col-form-label col-sm-4">{{ etudiant.nom }} {{ etudiant.prenom }} </label>
                <div class="col-sm-8">
                    <input type="text" name="{{ etudiant.id }}" class="form-control" required id="telephone" >
                </div>
            </div>
    {% endfor %}

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Annuler</button>
        <button type="submit" class="btn btn-primary btn-sm">Valider</button>
    </div>

</form>
    

</div>


