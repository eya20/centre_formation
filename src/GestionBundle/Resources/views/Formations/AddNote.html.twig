
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Ajouter Note</h5>

    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

 <div class="modal-body">

    <form action="{{ path("addNote" , { "id" :  formation.id  } )}}" method="POST" enctype="multipart/form-data">
        <div class="form-group row">
            <label for="nom" class="col-form-label col-sm-4">Etudiant</label>
            <div class="col-sm-8">
                <select class="js-example-basic-single form-control" name="state">
                {% for etudiant in etudiants %}
                    <option value="{{ etudiant.id }}">{{ etudiant.nom }} {{ etudiant.prenom}} </option>
                {% endfor %}
       
                </select>
            </div>
        </div>

            {% for matiere in matieres %}
            <div class="form-group row">
                <label for="nom" class="col-form-label col-sm-4">{{ matiere.nom }} </label>
                <div class="col-sm-8">
                    <input type="text" class="form-control"  name="{{ matiere.id }}" style="margin-bottom: 15px">
                      <div class="custom-file">
                            <input type="file" name="{{ matiere.id }}" id="{{ matiere.id }}">
                            <label class="custom-file-label" for="{{ matiere.id }}">SÃ©lectionner...</label>
                      </div>
                </div>
                <hr>
            </div>
            {% endfor %}

        <hr>
        <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Annuler</button>
        <button type="submit" class="btn btn-primary btn-sm" >valider</button>
</div>
</form>
</div>

{% block script %}
<script>
    $(document).ready(function() {
    $('.js-example-basic-single').select2();
});

</script>
{% endblock %}