
{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-container">
        {% block sidebar %}
            {{ parent() }}
        {% endblock %}
        {% block main  %}
            {{ parent() }}
        {% endblock %}

        <div class="container" style="margin-top: 100px">

            <section class="card">
                <div class="card-header">
                    <h3 class="card-title">Ajouter Formation</h3>
                </div>
                <div class="card-body">

                    <form action="designer-finish.html" class="form-horizontal" role="form">

                        <div class="form-group">
                            <label for="name" class="col-sm-3 control-label">Nom de formation</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" name="name" id="name" placeholder="Exemple : formation dÃ©veloppement web">
